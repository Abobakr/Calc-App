<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calc_App.MainPage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20"
                        Spacing="30"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
        <!-- Sonuç etiketi için Border ile sarmalama -->
        <Border Stroke="Black"
                StrokeThickness="5"
                BackgroundColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,20,0,20"
                HeightRequest="100"
                WidthRequest="350">
            <Label x:Name="ResultLabel"
                   Text=""
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="Blue"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Border>

        <!-- Tuşlar için Grid -->
        <Grid
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>

            <!-- 1. Satır -->
            <Button Text="(" Grid.Row="0" Grid.Column="0" Clicked="OnButtonClicked"/>
            <Button Text=")" Grid.Row="0" Grid.Column="1" Clicked="OnButtonClicked"/>
            <Button Text="^" Grid.Row="0" Grid.Column="2" Clicked="OnButtonClicked"/>
            <Button Text="d" Grid.Row="0" Grid.Column="3" Clicked="OnButtonClicked"/>
            <Button Text="c" Grid.Row="0" Grid.Column="4" Clicked="OnButtonClicked"/>

            <!-- 2. Satır -->
            <Button Text="7" Grid.Row="1" Grid.Column="0" Clicked="OnButtonClicked"/>
            <Button Text="8" Grid.Row="1" Grid.Column="1" Clicked="OnButtonClicked"/>
            <Button Text="9" Grid.Row="1" Grid.Column="2" Clicked="OnButtonClicked"/>
            <Button Text="/" Grid.Row="1" Grid.Column="3" Clicked="OnButtonClicked"/>
            <Button Text="-" Grid.Row="1" Grid.Column="4" Clicked="OnButtonClicked"/>

            <!-- 3. Satır -->
            <Button Text="4" Grid.Row="2" Grid.Column="0" Clicked="OnButtonClicked"/>
            <Button Text="5" Grid.Row="2" Grid.Column="1" Clicked="OnButtonClicked"/>
            <Button Text="6" Grid.Row="2" Grid.Column="2" Clicked="OnButtonClicked"/>
            <Button Text="*" Grid.Row="2" Grid.Column="3" Clicked="OnButtonClicked"/>
            <Button
                x:Name="CultureButton"
                Grid.Row="2"
                Grid.Column="4"
                Text="."
                Clicked="OnButtonClicked"/>

            <!-- 4. Satır -->
            <Button Text="1" Grid.Row="3" Grid.Column="0" Clicked="OnButtonClicked"/>
            <Button Text="2" Grid.Row="3" Grid.Column="1" Clicked="OnButtonClicked"/>
            <Button Text="3" Grid.Row="3" Grid.Column="2" Clicked="OnButtonClicked"/>
            <Button Text="+" Grid.Row="3" Grid.Column="3" Clicked="OnButtonClicked"/>
            <Button Text="=" Grid.Row="3" Grid.Column="4" Clicked="OnButtonClicked"/>

            <!-- 5. Satır -->
            <Button Text="0" Grid.Row="4" Grid.Column="2" Clicked="OnButtonClicked"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
